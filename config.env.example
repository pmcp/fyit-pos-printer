# FriendlyPOS Print Server Configuration
# Copy this file to config.env and update with your actual values

# API Configuration
API_URL=https://your-app.vercel.app
API_KEY=your-api-key-here
LOCATION_ID=1

# Polling Configuration
POLL_INTERVAL=2

# Printer Configuration
# Format: PRINTER_NAME=IP:PORT
PRINTER_MAIN=192.168.1.100:9100
PRINTER_KITCHEN=192.168.1.101:9100
PRINTER_BAR=192.168.1.102:9100

# Development Settings
DEV_MODE=0
DEBUG_LEVEL=INFO

# Server Settings
LOG_FILE=/tmp/print_server.log
MAX_LOG_SIZE=1048576
RETRY_ATTEMPTS=3
RETRY_DELAY=5

# Feature Flags
ENABLE_HEALTH_CHECK=1
ENABLE_METRICS=0
AUTO_UPDATE=0